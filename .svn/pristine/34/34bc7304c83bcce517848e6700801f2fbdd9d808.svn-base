		function open() {
			map.open({
				rect : {
					x : 0,
					y : 0,
					w : 'auto',
					h : 'auto'
				},
				/*center: {
				 lon: lon,
				 lat: lat
				 },*/
				zoomLevel : 17,
				showUserLocation : false,
				fixedOn : 'bmapRoute_frm',
				fixed : true
			}, function(ret) {
				if (ret) {
					//获取位置坐标
					getLocation();
				}
			});
		}

		function query(userName, recNum) {
			//alert(userName,recNum);
			map.removeRoute({
			    ids: routeid
			});
			routeid=[];
			var upurl = sevUrl.url + "coordRoute.ashx";
			api.ajax({
				url : upurl,
				method : 'post',
				timeout : 30,
				dataType : 'json',
				returnAll : false,
				data : {
					values : {
						userName : userName,
						topnum : recNum
					}
					//files : {
					//file : data
					//}
				}
			}, function(ret, err) {
				//alert(JSON.stringify(ret) + JSON.stringify(err));
				switch(ret.status) {
					case 1:
						//alert("记录成功");
						//alert("记录成功,停止定位");
						//api.stopLocation();
						//var points ={};
						var points = ret.cr;
						var plen = points.length;
						
						
						for(var i=0;i<plen;i++)
						{
							
							if(i==0)
							{
							}else{
								drawRoute(points,plen,i);
								//setTimeout('drawRoute(points,plen,i)',1000)
							}
						}
						
						break;
					case 0:
						alert(ret.cr);
						break;
				}
			});
		}
		function _drawRoute(_points,_plen,_i){       

			return function(){             
				//alert("drawRoute(_points,_plen,_i)");
				drawRoute(_points,_plen,_i);        
			} 
		}
		function drawRoute(points,plen,i){
			map.setCenter({
				coords : {
					lon : points[i].lon,//线路终点图标
					lat : points[i].lat
				},
				animation : true
			});
			map.searchRoute({
				id: i,
				type : 'drive',
				policy : 'ecar_fee_first',
				start : {
					lon : points[0].lon,//线路起点图标
					lat : points[0].lat
				},
				end : {
					lon : points[i].lon,//线路终点图标
					lat : points[i].lat
				}
			}, function(ret, err) {
				if (ret.status) {
					//setTimeout(drawr,500)
					//drawr();
					routeid.push(i+1);
					map.drawRoute({
						id : i,
						autoresizing : false,
						index : 0,
						styles : {
							start : {
								icon : 'widget://image/local-l.png'
							},
							end : {
								icon : 'widget://image/local-l.png'
							}
						}
					}, function(ret) {
						alert("drawRoute");
						api.alert({
							msg : JSON.stringify(ret)
						});
					});
				} else {
					api.alert({
						msg : JSON.stringify(err)
					});
				}
			});
		}
		
